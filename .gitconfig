[mergetool "fugitive"]
	cmd = vim -f -c \"Gdiff\" \"$MERGED\"

[merge]
	tool = fugitive

[push]
	default = simple

[alias]
  cl = clone
  co = checkout
  st = status
  a = add
  cm = commit
  pu = push
  p = pull

[core]
	excludesfile = /Users/mezdef/dotfiles/.gitignore
	editor = mvim
[difftool "sourcetree"]
	cmd = opendiff \"$LOCAL\" \"$REMOTE\"
	path = 
[mergetool "sourcetree"]
	cmd = /Applications/SourceTree.app/Contents/Resources/opendiff-w.sh \"$LOCAL\" \"$REMOTE\" -ancestor \"$BASE\" -merge \"$MERGED\"
	trustExitCode = true
